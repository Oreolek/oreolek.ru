<!doctype html>
<html lang="ru">
  <head>
    <title>{{title}}</title>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <link href='{{favicon}}' rel='shortcut icon' type='image/x-icon'/>
    {{#feeds}}
    <link href="{{{url}}}" rel="alternate" type="application/rss+xml" title="{{title}}">
    {{/feeds}}
    <!--[if lt IE 9]>
{{{ie_scripts}}}
    <![endif]-->
    {{{stylesheet}}}
   </head>
  <body vocab="http://schema.org">
   {{#navigation}}
