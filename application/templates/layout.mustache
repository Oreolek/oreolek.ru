      </div>
    </nav>
    {{/navigation}}

    <div class="container">
      <div class="paging">
        {{{get_paging}}}
      </div>
      <div class = "main_content">
        <h2>{{title}}</h2>
        {{#flashes}}
          {{#info}}
            <div class="alert alert-info">{{{.}}}</div>
          {{/info}}
          {{#error}}
            <div class="alert alert-danger">{{{.}}}</div>
          {{/error}}
          {{#warning}}
            <div class="alert alert-warning">{{{.}}}</div>
          {{/warning}}
          {{#success}}
            <div class="alert alert-success">{{{.}}}</div>
          {{/success}}
        {{/flashes}}
{{>content}}
      </div>
      <div class="paging">
        {{{get_paging}}}
      </div>
