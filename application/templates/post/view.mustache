<div class="hyphenate">
  {{{content}}}
  <div class="comment_section">
    {{{get_tags}}}
    {{#get_comments}}
      <div class="comment">
        <a name="comment_{{id}}"></a>
        <div class="author">
          {{#author_email}}<a href="mailto:{{author_email}}">{{/author_email}}
            {{author_name}}
          {{#author_email}}</a>{{/author_email}}
        </div>
        <div class="content">{{{content}}}</div>
      </div>
    {{/get_comments}}
    <form method="POST" action="{{comment_action}}">
      <input type="hidden" name="email">
      <input type="hidden" name="post_id" value="{{id}}">
      {{#get_comment_inputs}}
        {{{author_name}}}
        {{{author_email}}}
        {{{content}}}
      {{/get_comment_inputs}}
      <input type="submit" value="Отправить">
    </form>
  </div>
</div>
