<div>
{{#get_items}}
  <div class="post">
    <h3>{{heading}}</h3>
    <div class="meta">
      {{#date}}
        <div class="date">{{date}}</div>
      {{/date}}
      {{#edit_link}}
        <a class="edit_link" href="{{edit_link}}">Редактировать</a>
      {{/edit_link}}
    </div>
    <div class="hyphenate">{{{content}}}</div>
    <a class="link_comments" href="{{comments_link}}">
      {{#comment_count}}
      Комментарии ({{comment_count}})
      {{/comment_count}}
    </a>
  </div>
{{/get_items}}
</div>
<div class="paging">
  {{{get_paging}}}
</div>
