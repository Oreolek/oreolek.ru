<div class="rss">{{{rss_link}}}</div>
<div class="hyphenate">
  {{{content}}}
</div>
{{#get_items}}
  <div class="post" typeof="blogPost">
    <h3 property="headline"><a href="{{{view_link}}}">{{heading}}</a></h3>
    <div class="meta">
      {{#date}}
        <div class="date" property="datePublished">{{date}}</div>
      {{/date}}
      {{#edit_link}}
        <a class="edit_link" href="{{{edit_link}}}">Редактировать</a>
      {{/edit_link}}
    </div>
    <div class="hyphenate" property="description">{{{content}}}</div>
    {{#comment_count}}
    <a class="link_comments" href="{{{comments_link}}}">
      Комментарии (<span property="commentCount">{{comment_count}}</span>)
    </a>
    {{/comment_count}}
    <meta property="discussionUrl" content="{{{comments_link}}}" />
    <meta property="url" content="{{{view_link}}}" />
  </div>
{{/get_items}}
